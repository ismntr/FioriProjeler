<mvc:View controllerName="project12table.controller.View1table" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:form="sap.ui.layout.form" height="100%" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>contacts}">
        <OverflowToolbar>
            <Button icon="sap-icon://user-edit" text="{i18n>New}" press="onPressNew" enabled="true" />
            <Button icon="sap-icon://delete" text="{i18n>Delete}" press="delete" enabled="true" />

            <ToolbarSpacer />
            <Button icon="sap-icon://sort" text="{i18n>Sort}" press="sortById" enabled="true" />

            <Input width="30%" id="nameSurnameInput" placeholder="{i18n>Search}" liveChange="onNameSurnameSearch" />
        </OverflowToolbar>
        <content />

        <Table id="myTable" mode="{mainModel>/mode}" select="onPressSelect" delete="handleDelete" growing="true" items="{ path: 'mainModel>/contacts' }">
            <columns>
                <Column vAlign="Middle" hAlign="Left" flexible="true" width="30%">
                    <Text text="{i18n>idInput}" />
                </Column>
                <Column vAlign="Middle" hAlign="Left" width="30%">
                    <Text text="{i18n>nameInput}" />
                </Column>
                <Column vAlign="Middle" hAlign="Left" width="30%">
                    <Text text="{i18n>surnameInput}" />
                </Column>
                <Column vAlign="Middle" hAlign="Center" width="30%">
                    <Text text="{i18n>phoneInput}" />
                </Column>
                <Column vAlign="Middle" hAlign="Center" width="30%">
                    <Text text="{i18n>genderInput}" />
                </Column>
                <Column vAlign="Middle" hAlign="Center" width="30%">
                    <Text text="{i18n>statusInput}" />
                </Column>

                <Column vAlign="Middle" hAlign="Center" width="30%">
                    <Text text="{i18n>birthdayInput}" />
                </Column>
                <Column vAlign="Middle" hAlign="Center" width="100%">
                    <Text text="{i18n>addressInput}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier text="{mainModel>id}" />
                        <Input value="{mainModel>name}" change="onChange" />
                        <Input value="{mainModel>surname}" change="onChange" />
                        <Input value="{path: 'mainModel>phone', formatter: 'your.formatter.phoneNumber'}" change="onChange" />
                        <ComboBox items="{path: 'mainModel>/genders', templateShareable: false}" selectedKey="{mainModel>gender}" change="onChange" />
                        <Text text="{path: 'mainModel>active', formatter: '.formatter.activeStatus'}" />
                        <DatePicker dateValue="{mainModel>birthday}" />
                        <Text text="{mainModel>address}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
