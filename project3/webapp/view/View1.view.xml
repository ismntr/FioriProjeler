<mvc:View controllerName="project3.controller.View1" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox>
            <l:VerticalLayout class="sapUiContentPadding sapUiSmallMargin" width="100%">
                <l:content>
                    <TextArea id="inputText" class="sapUiSmallMargin" placeholder="YazÄ± giriniz" value="" height="100px" width="100%" />
                </l:content>
                <Panel>
                    <FlexBox>
                        <Button id="1" text="1" />
                        <Button id="2" text="2" />
                        <Button id="3" text="3" />
                        <Button id="add" text="+" />
                    </FlexBox>
                    <FlexBox>
                        <Button id="4" text="4" />
                        <Button id="5" text="5" />
                        <Button id="6" text="6" />
                        <Button id="sub" text="-" />
                    </FlexBox>
                    <FlexBox>
                        <Button id="7" text="7" />
                        <Button id="8" text="8" />
                        <Button id="9" text="9" />
                        <Button id="mul" text="*" />
                    </FlexBox>
                    <FlexBox>
                        <Button id="dot" text="." />
                        <Button id="0" text="0" />
                        <Button id="equal" text="=" press="onPress" />
                        <Button id="div" text="/" />
                    </FlexBox>
                </Panel>
            </l:VerticalLayout>
        </VBox>

        <content />
    </Page>
</mvc:View>
